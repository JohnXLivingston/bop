{
    "options": {
        "merge-default-rules": true
    },
    "files": {
        "include": "src/public/scss/**/*.scss"
    },
    "rules": {
        "extends-before-mixins": 2,
        "extends-before-declarations": 2,
        "placeholder-in-extend": 2,
        "mixins-before-declarations": [
            2,
            {
                "exclude": [
                    "breakpoint",
                    "mq"
                ]
            }
        ],
        "nesting-depth": [
            2,
            {
                "max-depth": 2
            }
        ],
        "no-warn": 1,
        "no-debug": 1,
        "no-ids": 2,
        "no-important": 0,
        "hex-notation": [
            2,
            {
                "style": "uppercase"
            }
        ],
        "indentation": [
            2,
            {
                "size": 2
            }
        ],
        "property-sort-order": [
            2,
            {
                "order": "alphabetical",
                "ignore-custom-properties": true
            }
        ]
    }
}